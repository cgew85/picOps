<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/containerTopImages"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/img1"
                android:layout_width="200px"
                android:layout_height="200px"
                android:background="#FF111111"
                android:src="@drawable/clicktoselect"
        />

        <ImageView
                android:id="@+id/img2"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_toRightOf="@+id/img1"
                android:background="#FF111111"
                android:src="@drawable/clicktoselect"
        />

    </RelativeLayout>

    <RelativeLayout
            android:layout_below="@+id/containerTopImages"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/textcompability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
        />

        <ImageView
                android:id="@+id/combinedImages"
                android:layout_width="400px"
                android:layout_height="400px"
                android:layout_below="@+id/textcompability"
        />

    </RelativeLayout>
</RelativeLayout>